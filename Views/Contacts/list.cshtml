@using completed_project.Models;
@model List<Contact>
<div class="container text-center">
    <h4 class="p-5">Contact List</h4>
    <table class="table">
        <thead>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Website</th>
            <th>Details</th>
        </thead>
        <tbody>
            @foreach (var contact in @Model)
            {
                <tr>
                    <td>@contact.Name</td>
                    <td>@contact.PhoneNumber</td>
                    <td>@contact.Email</td>
                    <td>@contact.Website</td>
                    <td> @Html.ActionLink("Details", "Details", new {contactName = contact.Name},null)</td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Add a New Contact", "Add", "Contacts", null, null)
</div>
